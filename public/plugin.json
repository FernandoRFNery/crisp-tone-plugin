{
  "id": "tone-profanity-detector",
  "name": "Tone & Profanity Detector",
  "version": "1.0.0",
  "description": "Detects customer messages with rude or negative tone. Tags, notifies, and alerts your team.",
  "website_url": "https://crisp-tone-plugin.onrender.com",
  "api_url": "https://crisp-tone-plugin.onrender.com/plugin.json",
  "permissions": ["plugin"],
  "components": {
    "settings": {
      "fields": [
        {
          "type": "text",
          "name": "tagToApply",
          "label": "Segment Tag to Apply",
          "placeholder": "e.g. profanity-alert"
        },
        {
          "type": "number",
          "name": "negativeThreshold",
          "label": "Negative Sentiment Threshold",
          "placeholder": "-0.5",
          "min": -5,
          "max": 0,
          "step": 0.1
        },
        {
          "type": "checkbox",
          "name": "slackEnabled",
          "label": "Enable Slack Alerts"
        },
        {
          "type": "text",
          "name": "slackWebhookUrl",
          "label": "Slack Webhook URL",
          "placeholder": "https://hooks.slack.com/..."
        },
        {
          "type": "checkbox",
          "name": "highlightProfanity",
          "label": "Highlight Profanity in Notes"
        }
      ],
      "load_url": "/plugin-config",
      "submit_url": "/plugin-config",
      "method": "POST"
    }
  }
}
